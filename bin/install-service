#!/usr/bin/env bash

set -e

tee /etc/systemd/system/nicksblog.service >/dev/null << EOT
# /etc/systemd/system/nicksblog.service

[Unit]
Description=Hugo server for Nick's blog

[Service]
User=root
WorkingDirectory=/var/local/nicksblog/site
ExecStart=/usr/local/bin/hugo server --baseUrl=https://nickferguson.dev --port 1313 --appendPort=false
Restart=always

[Install]
WantedBy=multi-user.target
EOT

systemctl daemon-reload
systemctl enable nicksblog.service
systemctl start nicksblog.service


